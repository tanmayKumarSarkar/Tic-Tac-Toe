<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pagebg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondPage"
    tools:ignore="Deprecated" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F29147"
        android:text=""
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/playFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn11"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="83dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:text=""
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="83dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn13"
                android:layout_width="76dp"
                android:layout_height="82dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="83dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn21"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn22"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn23"
                android:layout_width="76dp"
                android:layout_height="82dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn31"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="297dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn32"
                android:layout_width="77dp"
                android:layout_height="82dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="297dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />

            <Button
                android:id="@+id/btn33"
                android:layout_width="76dp"
                android:layout_height="82dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="297dp"
                android:background="@drawable/button_background_o"
                android:onClick="btnClick"
                android:color="#66FF0000" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:background="#8f6e4b"
            android:textSize="16sp"
            android:textColor="#ccff00"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginLeft="70dp"
            android:background="#8f6e4b"
            android:textSize="16sp"
            android:textColor="#ccff00" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginLeft="70dp"
            android:background="#8f6e4b"
            android:textSize="16sp"
            android:textColor="#ccff00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignRight="@+id/playFrame"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ai" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/you" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/draw" />
    </LinearLayout>

</RelativeLayout>